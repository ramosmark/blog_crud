<%= button_to 'Create Blog', new_blog_path, :method => :get %>

<% @blogs.to_a.each do |blog| %>
    <div>
        <h1><%= blog.title %></h1>
        <p><%= blog.content %></p>
        <p><%= blog.author %></p>
        <%= button_to 'Delete', blog, method: :delete %>
        <%= button_to 'Edit', edit_blog_path(blog), :method => :get %>
    <div>
<% end %>